<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="850dp"
    android:background="@drawable/mainwidth"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/otpfinal"
        android:layout_width="match_parent"
        android:gravity="center"
        android:visibility="gone"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:visibility="visible"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:paddingVertical="5dp"
            android:background="@drawable/header"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="horizontal">
            <ImageView
                android:src="@drawable/logom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />
            <TextView
                android:textAlignment="center"
                android:layout_width="320dp"
                android:textSize="18dp"
                android:textStyle="bold"
                android:fontFamily="@font/montserratbold"
                android:textColor="@color/white"
                android:textFontWeight="@integer/material_motion_duration_long_2"
                android:layout_height="wrap_content"
                android:text="Affordable Content Rewarding"
                tools:ignore="MissingConstraints" />
        </LinearLayout>
        <TextView
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:fontFamily="@font/montserratbold"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:text="Login/Register With Klapz"
            tools:ignore="MissingConstraints" />
        <TextView
            android:id="@+id/titleloginotp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:fontFamily="@font/montserratbold"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textFontWeight="@integer/material_motion_duration_long_2"
            android:layout_height="wrap_content"
            android:text="Enter the 4 digit code"
            tools:ignore="MissingConstraints" />
        <EditText
            android:id="@+id/plain_text_input"
            android:layout_marginTop="10dp"
            android:hint="Enter Code"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:paddingHorizontal="10dp"
            android:background="@drawable/button2"
            android:layout_height="55dp"
            android:layout_width="330dp"
            android:inputType="phone"/>
        <TextView
            android:id="@+id/errorotp"
            android:textAlignment="center"
            android:layout_width="330dp"
            android:layout_marginTop="5dp"
            android:textSize="16dp"
            android:fontFamily="@font/montserratregular"
            android:textStyle="bold"
            android:textColor="@color/lessWhite"
            android:textFontWeight="@integer/material_motion_duration_long_2"
            android:layout_height="wrap_content"
            android:text=""
            tools:ignore="MissingConstraints" />
        <TextView
            android:id="@+id/resendotp"
            android:textAlignment="viewEnd"
            android:layout_width="330dp"
            android:layout_marginTop="5dp"
            android:textSize="18dp"
            android:fontFamily="@font/montserratbold"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textFontWeight="@integer/material_motion_duration_long_2"
            android:layout_height="wrap_content"
            android:text="Resend Code"
            tools:ignore="MissingConstraints" />
        <TextView
            android:id="@+id/klapzlogin"
            android:layout_marginTop="30dp"
            android:layout_width="330dp"
            android:layout_marginBottom="15dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:elevation="15dp"
            android:background="@drawable/button"
            android:gravity="center"
            android:text="Verify"
            android:textColor="@color/klapxcolor"
            android:textSize="18sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:gravity="center"
        android:visibility="gone"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:visibility="visible"
            android:layout_marginTop="0dp"
            android:paddingVertical="5dp"
            android:background="@drawable/header"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="horizontal">
            <ImageView
                android:src="@drawable/logom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />
            <TextView
                android:textAlignment="center"
                android:layout_width="320dp"
                android:textSize="18dp"
                android:textStyle="bold"
                android:fontFamily="@font/montserratbold"
                android:textColor="@color/white"
                android:textFontWeight="@integer/material_motion_duration_long_2"
                android:layout_height="wrap_content"
                android:text="Affordable Content Rewarding"
                tools:ignore="MissingConstraints" />
        </LinearLayout>
        <TextView
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:fontFamily="@font/montserratbold"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:text="Login/Register With Klapz"
            tools:ignore="MissingConstraints" />
        <TextView
            android:id="@+id/titlelogin"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="@font/montserratbold"
            android:textFontWeight="@integer/material_motion_duration_long_2"
            android:layout_height="wrap_content"
            android:text="What's your Mobile\nnumber?"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/titleloginsub"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="20dp"
            android:textSize="14dp"
            android:textColor="@color/white"
            android:fontFamily="@font/montserratregular"
            android:textFontWeight="@integer/material_motion_duration_long_1"
            android:layout_height="wrap_content"
            android:text="You will receive a 4 digit code\non this number, by  SMS"
            tools:ignore="MissingConstraints" />

        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/button2"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp">

            <com.rilixtech.widget.countrycodepicker.CountryCodePicker
                android:id="@+id/ccp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                app:ccp_backgroundColor="@android:color/transparent"
                app:ccp_defaultNameCode="in"
                app:ccp_showFullName="false"
                app:ccp_hideNameCode="false"
                app:ccp_hidePhoneCode="false"
                app:ccp_textColor="@color/white" />

            <EditText
                android:id="@+id/phoneinput"
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:background="@drawable/button2"
                android:fontFamily="@font/montserratregular"
                android:hint="Mobile Number"
                android:inputType="phone"
                android:paddingHorizontal="10dp"
                android:textColor="@color/white"
                android:textColorHint="@color/blackg" />
        </LinearLayout>
        <TextView
            android:id="@+id/errorphone"
            android:textAlignment="center"
            android:layout_width="330dp"
            android:layout_marginTop="5dp"
            android:textSize="14dp"
            android:fontFamily="@font/montserratregular"
            android:textStyle="bold"
            android:textColor="@color/lessWhite"
            android:textFontWeight="@integer/material_motion_duration_long_2"
            android:layout_height="wrap_content"
            android:text=""
            tools:ignore="MissingConstraints" />
        <TextView
            android:id="@+id/klapznext"
            android:layout_marginTop="20dp"
            android:layout_width="330dp"
            android:layout_marginBottom="15dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:gravity="center"
            android:fontFamily="@font/montserratmedium"
            android:elevation="15dp"
            android:text="Next"
            android:textColor="@color/klapxcolor"
            android:textSize="18sp" />
    </LinearLayout>


    <LinearLayout
            android:id="@+id/user_detail_layout"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:background="@color/white"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:visibility="visible"
            android:layout_marginTop="0dp"
            android:layout_height="wrap_content"
            android:paddingVertical="12dp"
            android:background="@drawable/header2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="horizontal">

            <ImageView
                android:src="@drawable/logom"
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <TextView
                android:textAlignment="center"
                android:layout_width="320dp"
                android:textSize="18dp"
                android:textStyle="bold"
                android:fontFamily="@font/montserratbold"
                android:textColor="@color/klapxcolor"
                android:textFontWeight="@integer/material_motion_duration_long_2"
                android:layout_height="wrap_content"
                android:text="Affordable Content Rewarding"
                tools:ignore="MissingConstraints" />
        </LinearLayout>
        <TextView
            android:id="@+id/title"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:fontFamily="@font/montserratregular"
            android:textStyle="bold"
            android:textColor="@color/klapxcolor"
            android:textFontWeight="@integer/material_motion_duration_long_1"
            android:layout_height="wrap_content"
            android:text="Title of shared content"
            tools:ignore="MissingConstraints" />


        <EditText
            android:id="@+id/exprestion"
            android:layout_marginTop="30dp"
            android:paddingVertical="5dp"
            android:layout_gravity="center"
            android:hint="Tell about this content"
            android:background="@drawable/editstyle"
            android:gravity="top|left"
            android:paddingHorizontal="10dp"
            android:textSize="14dp"
            android:lines="5"
            android:fontFamily="@font/montserratregular"
            android:layout_height="100dp"
            android:layout_width="330dp"
            android:inputType="textMultiLine"/>
            <LinearLayout
                android:id="@+id/reffres"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:gravity="center"
                android:visibility="visible"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:orientation="horizontal">
                <ImageView
                    android:src="@drawable/logom"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/montserratregular"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="X"
                    android:textColor="@color/klapxcolor"
                    android:textSize="16dp" />
                <LinearLayout
                    android:id="@+id/prefretreffres"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:visibility="visible"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:orientation="horizontal">
                </LinearLayout>
                <EditText
                    android:id="@+id/klapcount"
                    android:padding="10dp"
                    android:textSize="24dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="2"
                    android:gravity="center"
                    android:background="@drawable/editstyle2"
                    android:layout_height="50dp"
                    android:layout_width="50dp"
                    android:inputType="phone"/>
            </LinearLayout>

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="330dp"
            android:checked="true"
            android:layout_gravity="center"
            android:fontFamily="@font/montserratregular"
            android:layout_marginTop="50dp"
            android:buttonTint="@color/klapxcolor"
            android:layout_height="wrap_content"
            android:text="Can we notify your friends about this Klap?"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/klapz"
            android:layout_width="330dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:background="@drawable/buttonklap"
            android:fontFamily="@font/montserratbold"
            android:gravity="center"
            android:text="Give: 2 Klapz"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/errorpopup2"
            android:layout_width="match_parent"
            android:gravity="center"
            android:visibility="gone"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/user_detail_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/klapzDownloaderror2"
                android:layout_marginTop="20dp"
                android:layout_width="330dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:fontFamily="@font/montserratregular"
                android:gravity="center"
                android:text="error"
                android:textColor="@color/klapxcolor"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/klapzDownload2"
                android:layout_marginTop="20dp"
                android:layout_width="330dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/buttonklap"
                android:fontFamily="@font/montserratbold"
                android:gravity="center"
                android:text="Download Klapz and buy Klapz"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>


     </LinearLayout>

    <LinearLayout
        android:id="@+id/errorpopup"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:visibility="gone"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="@+id/user_detail_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:visibility="visible"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:background="@drawable/header2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="horizontal">

            <ImageView
                android:src="@drawable/logom"
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <TextView
                android:textAlignment="center"
                android:layout_width="320dp"
                android:textSize="18dp"
                android:textStyle="bold"
                android:fontFamily="@font/montserratbold"
                android:textColor="@color/klapxcolor"
                android:textFontWeight="@integer/material_motion_duration_long_2"
                android:layout_height="wrap_content"
                android:text="Affordable Content Rewarding"
                tools:ignore="MissingConstraints" />
        </LinearLayout>
        <TextView
            android:id="@+id/titlemain"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:textSize="25dp"
            android:fontFamily="@font/montserratregular"
            android:textColor="@color/klapxcolor"
            android:textFontWeight="@integer/material_motion_duration_long_1"
            android:layout_height="wrap_content"
            android:text="Title of shared content"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/klapzDownloaderror"
            android:layout_marginTop="80dp"
            android:layout_width="330dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:fontFamily="@font/montserratregular"
            android:layout_gravity="center"
            android:text=""
            android:textColor="@color/klapxcolor"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/klapzDownload"
            android:layout_marginTop="20dp"
            android:layout_width="330dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:fontFamily="@font/montserratbold"
            android:background="@drawable/buttonklap"
            android:gravity="center"
            android:text="Download Klapz and buy Klapz"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/thncyou"
        android:layout_width="match_parent"
        android:visibility="visible"
        android:background="@color/white"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:visibility="visible"
            android:layout_marginTop="0dp"
            android:layout_height="wrap_content"
            android:paddingVertical="12dp"
            android:background="@drawable/header2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="horizontal">

            <ImageView
                android:src="@drawable/logom"
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <TextView
                android:textAlignment="center"
                android:layout_width="320dp"
                android:textSize="18dp"
                android:fontFamily="@font/montserratbold"
                android:textStyle="bold"
                android:textColor="@color/klapxcolor"
                android:textFontWeight="@integer/material_motion_duration_long_2"
                android:layout_height="wrap_content"
                android:text="Affordable Content Rewarding"
                tools:ignore="MissingConstraints" />
        </LinearLayout>

    <TextView
        android:id="@+id/thanxtext"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_marginTop="150dp"
        android:textSize="18dp"
        android:fontFamily="@font/montserratbold"
        android:textColor="@color/klapxcolor"
        android:textFontWeight="@integer/material_motion_duration_long_1"
        android:layout_height="wrap_content"
        android:text="Thanks for Klapping."
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:visibility="visible"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"
        android:paddingVertical="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginHorizontal="15dp"
            android:id="@+id/wa"
            android:src="@drawable/wp"
            android:layout_width="55dp"
            android:layout_height="55dp"
        />
        <ImageView
            android:layout_marginHorizontal="15dp"
            android:id="@+id/fb"
            android:src="@drawable/fb"
            android:layout_width="55dp"
            android:layout_height="55dp"
        />
        <ImageView
            android:layout_marginHorizontal="15dp"
            android:id="@+id/tw"
            android:src="@drawable/twiter"
            android:layout_width="55dp"
            android:layout_height="55dp"
        />
        <ImageView
            android:layout_marginHorizontal="15dp"
            android:id="@+id/share"
            android:src="@drawable/share"
            android:layout_width="55dp"
            android:layout_height="55dp"
        />

    </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>